generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum TaskCategories {
  exam
  quiz
  project
  reading
  lab_report
  presentation
  research
}

enum TaskPriority {
  low
  medium
  high
}

enum TaskStatus {
  pending
  in_progress
  completed
}

model User {
  id           String   @id @unique @default(uuid())
  email        String   @unique
  fullName     String
  password     String
  role         Role     @default(USER)
  major        String?
  academicYear String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Task {
  id             String         @id @unique @default(uuid())
  title          String
  description    String
  course         Course[]
  category       TaskCategories
  dueDate        DateTime
  dueTime        String
  priority       TaskPriority
  estimatedHours Decimal
  status         TaskStatus     @default(pending)
}

model Course {
  id        String   @id @unique
  title     String   @unique
  teacher   String
  task      Task[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
